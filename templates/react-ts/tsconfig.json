{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "es2017",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,    
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "es5"
  },
  "types" : [
    "./src/typing/index.d.ts", 
    "react", 
    "react-dom", 
    "@types/node", 
    "@types/react"
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
